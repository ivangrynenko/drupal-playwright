# Playwright Test Configuration
# Copy this file to .env and update with your values

# Base URL for tests (default: http://nginx:8080)
PLAYWRIGHT_BASE_URL=http://nginx:8080

# Test user credentials
# These environment variables can be used to override the default test user credentials

# Administrator user
PLAYWRIGHT_ADMIN_USERNAME=admin
PLAYWRIGHT_ADMIN_PASSWORD=admin

# Authenticated user
PLAYWRIGHT_AUTH_USERNAME=authenticated
PLAYWRIGHT_AUTH_PASSWORD=authenticated

# Project-specific users (uncomment and modify as needed)
# Example custom roles:
# PLAYWRIGHT_SITE_ADMIN_USERNAME=site_admin
# PLAYWRIGHT_SITE_ADMIN_PASSWORD=site_admin
# PLAYWRIGHT_CONTENT_AUTHOR_USERNAME=content_author
# PLAYWRIGHT_CONTENT_AUTHOR_PASSWORD=content_author
# PLAYWRIGHT_CONTENT_APPROVER_USERNAME=content_approver
# PLAYWRIGHT_CONTENT_APPROVER_PASSWORD=content_approver

# Test execution settings
PLAYWRIGHT_HEADLESS=true